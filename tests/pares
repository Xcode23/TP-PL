def main{
  decls i, size, var[100],count;
  stats
  write("Quantos numeros vai ler?\n");
  read(size);
  if(size>100){write("Demasiados numeros\n");}
  else{
    while(i<size){
      write("Escreva um numero\n");
      read(var[i]);
      i=i+1;
    }
    i=0;
    while(i<size){
      if(!(var[i]%2)){
        write(var[i], "\n");
        count=count+1;
      }
      i=i+1;
    }
    write("Numero de Pares:", count, "\n");
  }
}
